pipeline {
    agent any

    triggers {
        pollSCM('H/2 * * * *')   // Poll every 2 minutes
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Srivighnesh/jekins-test.git'
            }
        }

        stage('Build') {
            steps {
                echo "Building.."
                bat 'dir'
            }
        }

        stage('Test') {
            steps {
                echo "Testing.."
                bat 'python helloworld.py'
            }
        }

        stage('Deliver') {
            steps {
                echo "Deliver...."
                bat 'echo Delivery step completed'
            }
        }
    }
}
